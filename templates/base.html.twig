<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Neeya | {% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.2/solar/bootstrap.min.css"
          integrity="sha512-qDvDY8tOyoHYQPU+xFRtzr0XCLnJkPKfq/dQlYChtRMNOvkAwNTBW2PrTMJPjsN1raG+frv/LSA35wr+BU3M3w=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

</head>
<body>

<header>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="#">NEEYA
                    </a>

                    {% if is_granted('ROLE_ADMIN') %}

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('categorie') }}">Gestion catégorie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('ajoutProduit') }}">Ajout produit</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('gestionProduct') }}">Gestion produit</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('ajoutMenu') }}">Ajout menu</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('gestionMenu') }}">Gestion menu</a>
                </li>
                {% endif %}


                <li class="nav-item">
                    <a class="nav-link" href="#">Accueil</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Menu</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">La carte</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="{{ path('panier') }}" role="button" aria-haspopup="true" aria-expanded="false">Je commande</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('panier') }}">A emporter</a>
                        <a class="dropdown-item" href="#">Livraison</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
            </ul>
            <form class="d-flex">


            </form>
            {% if not app.user %}


                <a href="{{ path('login') }}" class="btn btn-info me-1">Connexion</a>
                <a href="{{ path('register') }}" class="btn btn-light me-1">Inscription</a>
            {% else %}

                <a href="{{ path('logout') }}" class="btn btn-light me-3"><i class="fa-solid fa-power-off fa-xl"></i></a>
            {% endif %}
        </div>
    </div>
</nav>



</header>

<div class="container mt-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-light text-center mt-5 w-50 mx-auto">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger text-center mt-5 w-50 mx-auto">
            {{ message }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
        integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
        crossorigin="anonymous"></script>
</body>
</html>
